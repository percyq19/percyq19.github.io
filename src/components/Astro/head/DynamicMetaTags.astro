---
/*  Component for dynamically generating meta tags.
 Props:
 - metaTags: Array of meta tag configurations

 Example usage:
 <DynamicMetaTags
   metaTags={[
     { name: 'description', content: 'Page description' },
     { property: 'fb:app_id', content: '123456789' },
     { name: 'google-site-verification', content: 'verification_code' }
   ]}
 />

 Notes:
 - Supports both name and property attributes
 - Commonly used for verification tags and social media properties
 - Useful for dynamic SEO management
*/
interface MetaTag {
	name?: string;
	property?: string;
	content: string;
}

interface Props {
	metaTags: MetaTag[];
}

const { metaTags = [] } = Astro.props;
---

{
	metaTags?.map((tag) => (
		<meta name={tag.name} property={tag.property} content={tag.content} />
	))
}
