---
/**
 * @description Component for rendering interactive tag elements with optional count indicators.
 * @param {Props} props - Tag configuration
 * @example
 * ```astro
 * // Basic tag
 * <Tag tag="javascript" />
 *
 * // Tag with count
 * <Tag
 *   tag="typescript"
 *   count={5}
 * />
 *
 * // Different sizes
 * <Tag tag="react" size="xs" />
 * <Tag tag="vue" size="sm" />
 * <Tag tag="svelte" size="md" />
 * <Tag tag="astro" size="lg" />
 *
 * // With custom styling
 * <Tag
 *   tag="web-components"
 *   class="my-custom-tag"
 * />
 * ```
 * @note
 * - Automatically formats tag text (replaces hyphens with spaces)
 * - Links to tag-specific pages (/tags/[tag])
 * - Supports four size variants: xs, sm, md, lg
 * - Optional count indicator
 * - Hover animations and transitions
 * - Accessible with proper aria attributes
 */

import type { AstroBuiltinAttributes } from 'astro';

export interface Props {
	/** Tag text identifier */
	tag: string;
	/** Optional count of items with this tag */
	count?: number | string | undefined;
	/** Size variant for the tag */
	size?: "xs" | "sm" | "md" | "lg";
	/** Optional CSS classes */
	class?: string | AstroBuiltinAttributes['class:list'];
}

const { tag, count, size = "md", class: className } = Astro.props;

const options = { "rounded-theme": true };
---

<span
	class:list={[
		"h6 bg-secondary border border-theme-secondary text-xs text-white inline-flex justify-center items-center hover:cursor-pointer hover:bg-theme-primary hover:text-theme-accent hover:border-theme-primary transition-all duration-300",
		{ "py-0.5 px-0.5 mr-1 mb-1": size === "xs" },
		{ "py-1 px-1 mr-2 mb-2": size === "sm" },
		{ "py-1.5 px-1.5 mr-2.5 mb-2.5": size === "md" },
		{ "py-2 px-2 my-3 mr-6 ": size === "lg" },
		options,
		className,
	]}
>
	<a
		href={`/tags/${tag}`}
		class:list={[
			"hover:cursor-pointer no-underline",
			{ "text-xs": size === "sm" },
			{ "text-sm": size === "md" || size === "lg" },
		]}
	>
		#{tag?.replace(/-/g, " ")}
		{
			count !== undefined && (
				<span class="text-xs font-semibold"> ({count})</span>
			)
		}
	</a>
</span>
