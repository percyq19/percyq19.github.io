---
/**
 * @description Component for rendering consistent page headings with optional background styling.
 * @param {Props} props - PageHeading configuration
 * @example
 * ```astro
 * // Basic heading
 * <PageHeading text="Welcome" />
 *
 * // Without background
 * <PageHeading
 *   text="About Us"
 *   showHeadingBackground={false}
 * />
 *
 * // With custom styling
 * <PageHeading
 *   text="Contact"
 *   class="my-custom-heading"
 * />
 * ```
 * @note
 * - Centers text with responsive margins
 * - Optional background styling controlled by showHeadingBackground
 * - Capitalizes text by default
 * - Uses theme-based colors and border radius
 * - Responsive padding and margins for different screen sizes
 */

import type { AstroBuiltinAttributes } from "astro";

export interface Props {
	/** Text content of the heading */
	text: string;
	/** Controls whether heading has background styling */
	showHeadingBackground?: boolean;
	/** Optional CSS classes */
	class?: string | AstroBuiltinAttributes["class:list"];
}

const { text, showHeadingBackground = true, class: className } = Astro.props;
---

<div
	class:list={["flex justify-center mt-12 mb-10 md:mt-24 md:mb-12", className]}
>
	<p
		class:list={[
			"h6 text-4xl text-center mx-4 capitalize leading-relaxed",
			{
				"bg-theme-secondary text-theme-secondary leading-none p-4 inline-block":
					showHeadingBackground,
				"w-full": !showHeadingBackground,
			},
			{ "rounded-theme": true },
		]}
	>
		{text}
	</p>
</div>
