---
import Layout from "@layouts/Layout.astro";
import PageHeader from "@components/Astro/PageHeader.astro";
import Card from "@components/Astro/Card.astro";
import coverImage from "@assets/alk-cover-2.webp";
import Link from "@components/Astro/Link.astro";

import { Icon } from "astro-icon/components";

import { Image } from "astro:assets";
import Bing from "@assets/bing.jpg";

const description =
  "Build modern websites in minutes with Alkaline - a low-dependency, framework-less, type-safe Astro starter kit. Featuring 14 unique color themes and more than 2 dozen pre-built Astro components, Alkaline is a great starting point for blogs, portfolios, e-commerce sites, and more.";

const options = {
  "rounded-theme": true,
};
---



import { getCollection } from "astro:content";
import { Markdown } from "astro/components";

const posts = await getCollection("blog");
const sortedPosts = posts.sort((a, b) => new Date(b.data.pubDatetime) - new Date(a.data.pubDatetime));
const post = sortedPosts[0];

<Layout>
  {post ? (
    <article class="prose mx-auto my-10">
      <h1>{post.data.title}</h1>
      {post.data.subtitle && <h2>{post.data.subtitle}</h2>}
      <p>{post.data.description}</p>
      <Markdown content={post.body} />
    </article>
  ) : (
    <p class="text-center mt-10">No hay publicaciones a√∫n.</p>
  )}
</Layout>
