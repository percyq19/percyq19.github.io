---
import { getCollection } from "astro:content";
import Post from "@layouts/Post.astro";

export async function getStaticPaths() {
	const posts = await getCollection("investigacion");
	return posts.map((post) => ({
		params: { slug: post.id },
		props: {
			postId: post.id,
			collectionName: "investigacion",
			tags: post.data.tags,
		},
	}));
}

const props = Astro.props;
---

<Post postId={props.postId} collectionName="investigacion" tags={props.tags} />
